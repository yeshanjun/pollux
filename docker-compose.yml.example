services:
  pollux:
    image: ghcr.io/Yoo1tic/pollux:latest
    container_name: pollux
    ports:
      - "8188:8188"
    volumes:
      # Runtime config
      - ./config.toml:/app/config.toml:ro
      # Persist SQLite database
      - ./data:/app/data
      # Optional: mount credentials directory
      - ./credentials:/app/credentials:ro

    # Restart policy
    restart: unless-stopped
